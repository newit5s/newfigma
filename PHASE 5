    width: 100%;
  }
  
  .rb-bulk-actions-bar {
    flex-direction: column;
    gap: var(--rb-space-3);
    align-items: stretch;
  }
  
  .rb-bulk-buttons {
    justify-content: space-between;
  }
  
  /* Table adaptations */
  .rb-bookings-table {
    font-size: var(--rb-text-sm);
  }
  
  .rb-bookings-table th,
  .rb-bookings-table td {
    padding: var(--rb-space-2) var(--rb-space-1);
  }
  
