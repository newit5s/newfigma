💻 JavaScript Implementation
Modern Admin Manager Class
javascriptclass ModernAdminManager {
  constructor() {
    this.currentTab = 'dashboard';
    this.activeLocation = this.getDefaultLocation();
    this.refreshInterval = 60000; // 1 minute
    
    this.init();
  }
  
  init() {
    this.bindEvents();
    this.loadDashboard();
    this.startAutoRefresh();
  }
  
  bindEvents() {
    // Navigation clicks
    document.querySelectorAll('.rb-admin-menu-item').forEach(item => {
      item.addEventListener('click', (e) => {
        e.preventDefault();
        const page = new URL(item.href).searchParams.get('page');
        this.navigateTo(page);
      });
    });
    
    // Location selector
    document.getElementById('location-filter')?.addEventListener('change', (e) => {
      this.activeLocation = e.target.value;
      this.reloadContent();
    });
    
    // Filter buttons
    document.querySelectorAll('[id$="-filter"]').forEach(filter => {
      filter.addEventListener('change', () => {
        this.applyFilters();
      });
    });
    
    // Refresh buttons
    document.querySelectorAll('[data-action="refresh"]').forEach(btn => {
      btn.addEventListener('click', () => {
        this.reloadContent();
      });
    });
  }
  
  async navigateTo(page) {
    // Update active menu item
    document.querySelectorAll('.rb-admin-menu-item').forEach(item => {
      item.classList.remove('rb-active');
      const href = new URL(item.href);
      if (href.searchParams.get('page') === page) {
        item.classList.add('rb-active');
      }
    });
    
    // Load page content
    switch(page) {
      case 'rb-dashboard':
        await this.loadDashboard();
        break;
      case 'rb-bookings':
        await this.loadBookings();
        break;
      case 'rb-locations':
        await this.loadLocations();
        break;
      case 'rb-settings':
        await this.loadSettings();
        break;
      case 'rb-reports':
        await this.loadReports();
        break;
    }
  }
  
  async loadDashboard() {
    const loader = document.getElementById('admin-loader');
    if (loader) loader.style.display = 'flex';
    
    try {
      const response = await fetch(ajaxurl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: new URLSearchParams({
          action: 'rb_admin_get_dashboard',
          nonce: rbAdmin.nonce
        })
      });
      
      const data = await response.json();
      
      if (data.success) {
        this.renderDashboard(data.data);
      }
    } catch (error) {
      console.error('Failed to load dashboard:', error);
    } finally {
      if (loader) loader.style.display = 'none';
    }
  }
  
  renderDashboard(data) {
    const content = document.querySelector('.rb-admin-content');
    if (!content) return;
    
    content.innerHTML = `
      <div class="rb-multi-location-dashboard">
        <div class="rb-dashboard-header">
          <h1 class="rb-dashboard-title">Multi-Location Overview</h1>
          <button class="rb-btn rb-btn-sm rb-btn-outline" data-action="refresh">
            Refresh
          </button>
        </div>
        
        <div class="rb-locations-grid">
          ${data.locations.map(loc => this.renderLocationCard(loc)).join('')}
        </div>
      </div>
    `;
    
    this.bindLocationCardEvents();
  }
  
  renderLocationCard(location) {
    return `
      <div class="rb-location-card">
        <div class="rb-location-header">
          <h3 class="rb-location-name">${location.name}</h3>
          <button class="rb-btn rb-btn-sm rb-btn-icon" title="Edit">
            <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25z"/>
            </svg>
          </button>
        </div>
        
        <div class="rb-location-stats">
          <div class="rb-stat">
            <div class="rb-stat-label">Today's Bookings</div>
            <div class="rb-stat-value">${location.stats.bookings}</div>
            <div class="rb-stat-change rb-${location.stats.bookings_trend > 0 ? 'positive' : 'negative'}">
              ${location.stats.bookings_trend > 0 ? '+' : ''}${location.stats.bookings_trend}%
            </div>
          </div>
          <div class="rb-stat">
            <div class="rb-stat-label">Revenue</div>
            <div class="rb-stat-value">${location.stats.revenue}</div>
            <div class="rb-stat-change rb-${location.stats.revenue_trend > 0 ? 'positive' : 'negative'}">
              ${location.stats.revenue_trend > 0 ? '+' : ''}${location.stats.revenue_trend}%
            </div>
          </div>
          <div class="rb-stat">
            <div class="rb-stat-label">Occupancy</div>
            <div class="rb-stat-value">${location.stats.occupancy}%</div>
            <div class="rb-stat-change rb-${location.stats.occupancy_trend > 0 ? 'positive' : 'negative'}">
              ${location.stats.occupancy_trend > 0 ? '+' : ''}${location.stats.occupancy_trend}%
            </div>
          </div>
          <div class="rb-stat">
            <div class="rb-stat-label">Tables</div>
            <div class="rb-stat-value">${location.stats.tables}</div>
            <div class="rb-stat-change rb-neutral">0%</div>
          </div>
        </div>
        
        <div class="rb-location-actions">
          <a href="?page=rb-bookings&location=${location.id}" class="rb-btn rb-btn-sm rb-btn-outline">
            View Bookings
          </a>
          <a href="?page=rb-tables&location=${location.id}" class="rb-btn rb-btn-sm rb-btn-outline">
            Manage Tables
          </a>
        </div>
      </div>
    `;
  }
  
  startAutoRefresh() {
    this.refreshTimer = setInterval(() => {
      if (this.currentTab === 'dashboard') {
        this.loadDashboard();
      }
    }, this.refreshInterval);
  }
  
  getDefaultLocation() {
    return localStorage.getItem('rb_admin_location') || '1';
  }
}

// Initialize on DOM ready
document.addEventListener('DOMContentLoaded', () => {
  if (document.querySelector('.rb-admin-header')) {
    new ModernAdminManager();
  }
