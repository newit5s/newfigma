                <?php wp_nonce_field('rb_portal_login_nonce', 'login_nonce'); ?>
                
                <div class="rb-form-group">
                    <label class="rb-label" for="username">
                        <?php _e('Username', 'restaurant-booking'); ?>
                    </label>
                    <input type="text" 
                           class="rb-input rb-input-lg" 
