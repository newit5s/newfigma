        if (!get_option('restaurant_booking_settings')) {
            add_option('restaurant_booking_settings', array(
                'theme' => 'light',
                'enable_dark_mode' => true,
                'booking_buffer_time' => 30,
                'max_party_size' => 20,
                'booking_advance_days' => 90
            ));
        }
    }
}
