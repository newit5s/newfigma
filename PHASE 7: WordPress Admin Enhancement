🔧 WordPress Integration
Modern Admin Class
php<?php
// admin/class-modern-admin.php

class RB_Modern_Admin {
    
    public function __construct() {
        add_action('admin_menu', array($this, 'add_admin_pages'));
        add_action('admin_enqueue_scripts', array($this, 'enqueue_admin_assets'));
        add_action('wp_ajax_rb_admin_get_dashboard', array($this, 'ajax_get_dashboard'));
        add_action('wp_ajax_rb_admin_get_bookings', array($this, 'ajax_get_bookings'));
        add_action('wp_ajax_rb_admin_get_locations', array($this, 'ajax_get_locations'));
    }
    
    public function add_admin_pages() {
        // Main menu
        add_menu_page(
            'Restaurant Booking',
            'Bookings',
            'manage_options',
            'rb-dashboard',
            array($this, 'render_dashboard'),
            'dashicons-calendar',
            3
        );
        
        // Submenu pages
        add_submenu_page(
            'rb-dashboard',
            'Dashboard',
            'Dashboard',
            'manage_options',
            'rb-dashboard',
            array($this, 'render_dashboard')
        );
        
        add_submenu_page(
            'rb-dashboard',
            'Bookings',
            'Bookings',
            'manage_options',
            'rb-bookings',
            array($this, 'render_bookings')
        );
        
        add_submenu_page(
            'rb-dashboard',
            'Locations',
            'Locations',
            'manage_options',
            'rb-locations',
            array($this, 'render_locations')
        );
        
        add_submenu_page(
            'rb-dashboard',
            'Settings',
            'Settings',
            'manage_options',
            'rb-settings',
            array($this, 'render_settings')
        );
        
        add_submenu_page(
            'rb-dashboard',
            'Reports',
            'Reports',
            'manage_options',
            'rb-reports',
            array($this, 'render_reports')
        );
    }
    
    public function enqueue_admin_assets($hook) {
        // Only enqueue on our plugin pages
        if (strpos($hook, 'rb-') === false) {
            return;
        }
        
        // Enqueue styles
        wp_enqueue_style('rb-modern-admin',
            plugin_dir_url(__FILE__) . '../assets/css/modern-admin.css',
            array('rb-design-system'),
            '1.0.0'
        );
        
        // Enqueue scripts
        wp_enqueue_script('rb-modern-admin',
            plugin_dir_url(__FILE__) . '../assets/js/modern-admin.js',
            array('jquery'),
            '1.0.0',
            true
        );
        
        // Localize
        wp_localize_script('rb-modern-admin', 'rbAdmin', array(
            'ajax_url' => admin_url('admin-ajax.php'),
            'nonce' => wp_create_nonce('rb_admin_nonce'),
            'strings' => array(
                'loading' => __('Loading...', 'restaurant-booking'),
                'error' => __('Error loading data', 'restaurant-booking')
            )
        ));
    }
    
    public function render_dashboard() {
        include plugin_dir_path(__FILE__) . '../admin/partials/admin-dashboard.php';
    }
    
    public function render_bookings() {
        include plugin_dir_path(__FILE__) . '../admin/partials/bookings-table.php';
    }
    
    public function render_locations() {
        include plugin_dir_path(__FILE__) . '../admin/partials/locations-management.php';
    }
    
    public function render_settings() {
        include plugin_dir_path(__FILE__) . '../admin/partials/settings-panel.php';
    }
    
    public function render_reports() {
        include plugin_dir_path(__FILE__) . '../admin/partials/reports-analytics.php';
    }
    
    public function ajax_get_dashboard() {
        check_ajax_referer('rb_admin_nonce', 'nonce');
        
        try {
            $locations = RB_Location::get_all_locations();
            $dashboard_data = array(
                'locations' => array_map(array($this, 'format_location_stats'), $locations)
            );
            
            wp_send_json_success($dashboard_data);
        } catch (Exception $e) {
            wp_send_json_error(array('message' => $e->getMessage()));
        }
    }
    
    public function ajax_get_bookings() {
        check_ajax_referer('rb_admin_nonce', 'nonce');
        
        $location = sanitize_text_field($_POST['location'] ?? '');
        $status = sanitize_text_field($_POST['status'] ?? '');
        $page = intval($_POST['page'] ?? 1);
        
        try {
            // Get bookings filtered by parameters
            $bookings = RB_Booking::get_admin_bookings($location, $status, $page);
            
            wp_send_json_success($bookings);
        } catch (Exception $e) {
            wp_send_json_error(array('message' => $e->getMessage()));
        }
    }
    
    private function format_location_stats($location) {
        $today = date('Y-m-d');
        $yesterday = date('Y-m-d', strtotime('-1 day'));
        
        // Get today's stats
        $today_bookings = RB_Booking::count_by_date_and_location($today, $location->id);
        $yesterday_bookings = RB_Booking::count_by_date_and_location($yesterday, $location->id);
        $bookings_trend = $yesterday_bookings > 0 
            ? round((($today_bookings - $yesterday_bookings) / $yesterday_bookings) * 100)
            : 0;
        
        // Calculate revenue
        $today_revenue = RB_Booking::sum_revenue_by_date_and_location($today, $location->id);
        $yesterday_revenue = RB_Booking::sum_revenue_by_date_and_location($yesterday, $location->id);
        $revenue_trend = $yesterday_revenue > 0
            ? round((($today_revenue - $yesterday_revenue) / $yesterday_revenue) * 100)
            : 0;
        
        // Calculate occupancy
        $occupancy = RB_Table::get_occupancy_rate($location->id);
        $previous_occupancy = RB_Table::get_occupancy_rate($location->id, $yesterday);
        $occupancy_trend = $occupancy - $previous_occupancy;
        
        return array(
            'id' => $location->id,
            'name' => $location->name,
            'stats' => array(
                'bookings' => $today_bookings,
                'bookings_trend' => $bookings_trend,
                'revenue' => '$' . number_format($today_revenue, 0),
                'revenue_trend' => $revenue_trend,
                'occupancy' => $occupancy,
                'occupancy_trend' => $occupancy_trend,
                'tables' => RB_Table::count_by_location($location->id)
            )
        );
    }
}

// Initialize
new RB_Modern_Admin();
