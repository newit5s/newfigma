public function enqueue_admin_assets( $hook ) {
    if ( strpos( $hook, 'rb-' ) === false ) {
        return;
    }

    $version  = defined( 'RB_PLUGIN_VERSION' ) ? RB_PLUGIN_VERSION : '1.0.0';
    $base_url = plugin_dir_url( __FILE__ ) . '../';

    wp_enqueue_style(
