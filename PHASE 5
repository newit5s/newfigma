### Edit Modal JavaScript
```javascript
class BookingEditModal {
  constructor(parent) {
    this.parent = parent;
    this.modal = document.getElementById('booking-edit-modal');
    this.form = document.getElementById('booking-edit-form');
    this.currentBookingId = null;
    
    this.bindEvents();
  }
  
  bindEvents() {
    // Form submission
    this.form?.addEventListener('submit', (e) => {
      this.handleFormSubmit(e);
    });
    
    // Modal close events
    this.modal?.querySelectorAll('[data-dismiss="modal"], .rb-modal-close').forEach(btn => {
      btn.addEventListener('click', () => {
        this.closeModal();
      });
    });
    
    // Date/time validation
    document.getElementById('edit-booking-date')?.addEventListener('change', () => {
      this.validateDateTime();
    });
    
    document.getElementById('edit-booking-time')?.addEventListener('change', () => {
      this.validateDateTime();
    });
    
    // Party size change updates available tables
    document.getElementById('edit-party-size')?.addEventListener('change', (e) => {
      this.updateAvailableTables(e.target.value);
    });
  }
  
  async openModal(bookingId) {
    this.currentBookingId = bookingId;
    
    try {
      // Load booking data
      const bookingData = await this.loadBookingData(bookingId);
      this.populateForm(bookingData);
      
      // Show modal
      this.modal.style.display = 'flex';
      document.body.style.overflow = 'hidden';
      
      // Focus first input
      setTimeout(() => {
        document.getElementById('edit-customer-name')?.focus();
      }, 100);
      
    } catch (error) {
      this.parent.showError('Failed to load booking data');
    }
  }
  
  closeModal() {
    this.modal.style.display = 'none';
    document.body.style.overflow = '';
    this.clearForm();
    this.currentBookingId = null;
  }
  
  async loadBookingData(bookingId) {
    const response = await fetch(this.parent.ajaxUrl, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/x-www-form-urlencoded',
      },
      body: new URLSearchParams({
        action: 'rb_get_booking_details',
        nonce: this.parent.nonce,
        booking_id: bookingId
      })
    });
    
    const data = await response.json();
    
    if (data.success) {
      return data.data;
    } else {
      throw new Error(data.message);
    }
  }
  
  populateForm(bookingData) {
    // Customer information
    document.getElementById('edit-customer-name').value = bookingData.customer_name || '';
    document.getElementById('edit-customer-email').value = bookingData.email || '';
    document.getElementById('edit-customer-phone').value = bookingData.phone || '';
    
    // Booking details
    document.getElementById('edit-booking-date').value = bookingData.booking_date || '';
    document.getElementById('edit-booking-time').value = bookingData.booking_time || '';
    document.getElementById('edit-party-size').value = bookingData.party_size || '';
    document.getElementById('edit-table-number').value = bookingData.table_number || '';
    document.getElementById('edit-status').value = bookingData.status || '';
    document.getElementById('edit-location').value = bookingData.location_id || '';
    
    // Special requests
    document.getElementById('edit-special-requests').value = bookingData.special_requests || '';
    
    // Update available tables
    this.updateAvailableTables(bookingData.party_size);
  }
  
  async updateAvailableTables(partySize) {
    if (!partySize) return;
    
    const tableSelect = document.getElementById('edit-table-number');
    const date = document.getElementById('edit-booking-date').value;
    const time = document.getElementById('edit-booking-time').value;
    const location = document.getElementById('edit-location').value;
    
    if (!date || !time || !location) return;
    
    try {
      const response = await fetch(this.parent.ajaxUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: new URLSearchParams({
          action: 'rb_get_available_tables',
          nonce: this.parent.nonce,
          date: date,
          time: time,
          party_size: partySize,
          location_id: location,
          exclude_booking_id: this.currentBookingId
        })
      });
      
      const data = await response.json();
      
      if (data.success) {
        this.populateTableOptions(data.data.tables);
      }
    } catch (error) {
      console.error('Failed to load available tables:', error);
    }
  }
  
  populateTableOptions(tables) {
    const tableSelect = document.getElementById('edit-table-number');
    const currentValue = tableSelect.value;
    
    // Clear existing options except auto-assign
    tableSelect.innerHTML = '<option value="">Auto-assign</option>';
    
    // Add available tables
    tables.forEach(table => {
      const option = document.createElement('option');
      option.value = table.number;
      option.textContent = `Table ${table.number} (${table.capacity} seats)`;
      if (table.number === currentValue) {
        option.selected = true;
      }
      tableSelect.appendChild(option);
    });
  }
  
  validateDateTime() {
    const dateInput = document.getElementById('edit-booking-date');
    const timeInput = document.getElementById('edit-booking-time');
    
    const selectedDate = new Date(dateInput.value + ' ' + timeInput.value);
    const now = new Date();
    
    // Clear previous errors
    this.clearFieldError('edit-booking-date');
    this.clearFieldError('edit-booking-time');
    
    // Check if date is in the past
    if (selectedDate < now) {
      this.showFieldError('edit-booking-date', 'Booking date cannot be in the past');
      return false;
    }
    
    // Check if time is within business hours
    const hour = selectedDate.getHours();
    if (hour < 11 || hour > 22) {
      this.showFieldError('edit-booking-time', 'Booking time must be between 11:00 AM and 10:00 PM');
      return false;
    }
    
    return true;
  }
  
  async handleFormSubmit(e) {
    e.preventDefault();
    
    if (!this.validateForm()) {
      return;
    }
    
    this.setLoadingState(true);
    
    try {
      const formData = this.getFormData();
      
      const response = await fetch(this.parent.ajaxUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: new URLSearchParams({
          action: 'rb_update_booking',
          nonce: this.parent.nonce,
          booking_id: this.currentBookingId,
          ...formData
        })
      });
      
      const data = await response.json();
      
      if (data.success) {
        this.parent.showSuccess('Booking updated successfully');
        this.parent.loadBookings(); // Refresh the table
        this.closeModal();
      } else {
        this.parent.showError(data.message);
      }
      
    } catch (error) {
      this.parent.showError('Failed to update booking');
    } finally {
      this.setLoadingState(false);
    }
  }
  
  validateForm() {
    let isValid = true;
    
    // Clear all previous errors
    this.clearAllErrors();
    
    // Required fields validation
    const requiredFields = [
      { id: 'edit-customer-name', message: 'Customer name is required' },
      { id: 'edit-customer-email', message: 'Email is required' },
      { id: 'edit-customer-phone', message: 'Phone number is required' },
      { id: 'edit-booking-date', message: 'Booking date is required' },
      { id: 'edit-booking-time', message: 'Booking time is required' },
      { id: 'edit-party-size', message: 'Party size is required' },
      { id: 'edit-status', message: 'Status is required' }
    ];
    
    requiredFields.forEach(field => {
      const input = document.getElementById(field.id);
      if (!input.value.trim()) {
        this.showFieldError(field.id, field.message);
        isValid = false;
      }
    });
    
    // Email validation
    const email = document.getElementById('edit-customer-email').value;
    if (email && !this.isValidEmail(email)) {
      this.showFieldError('edit-customer-email', 'Please enter a valid email address');
      isValid = false;
    }
    
    // Phone validation
    const phone = document.getElementById('edit-customer-phone').value;
    if (phone && !this.isValidPhone(phone)) {
      this.showFieldError('edit-customer-phone', 'Please enter a valid phone number');
      isValid = false;
    }
    
    // Date/time validation
    if (!this.validateDateTime()) {
      isValid = false;
    }
    
    return isValid;
  }
  
  getFormData() {
    return {
      customer_name: document.getElementById('edit-customer-name').value.trim(),
      email: document.getElementById('edit-customer-email').value.trim(),
      phone: document.getElementById('edit-customer-phone').value.trim(),
      booking_date: document.getElementById('edit-booking-date').value,
      booking_time: document.getElementById('edit-booking-time').value,
      party_size: document.getElementById('edit-party-size').value,
      table_number: document.getElementById('edit-table-number').value,
      status: document.getElementById('edit-status').value,
      location_id: document.getElementById('edit-location').value,
      special_requests: document.getElementById('edit-special-requests').value.trim()
    };
  }
  
  setLoadingState(loading) {
    const submitBtn = document.getElementById('save-booking-btn');
    const btnText = submitBtn.querySelector('.rb-btn-text');
    const btnLoading = submitBtn.querySelector('.rb-btn-loading');
    
    if (loading) {
      btnText.style.display = 'none';
      btnLoading.style.display = 'block';
      submitBtn.disabled = true;
    } else {
      btnText.style.display = 'block';
      btnLoading.style.display = 'none';
      submitBtn.disabled = false;
    }
  }
  
  showFieldError(fieldId, message) {
    const input = document.getElementById(fieldId);
    const errorElement = input.parentNode.querySelector('.rb-error-message');
    
    if (input) {
      input.classList.add('rb-error');
    }
    
    if (errorElement) {
      errorElement.textContent = message;
      errorElement.style.display = 'block';
    }
  }
  
  clearFieldError(fieldId) {
    const input = document.getElementById(fieldId);
    const errorElement = input.parentNode.querySelector('.rb-error-message');
    
    if (input) {
      input.classList.remove('rb-error');
    }
    
    if (errorElement) {
      errorElement.textContent = '';
      errorElement.style.display = 'none';
    }
  }
  
  clearAllErrors() {
    const errorMessages = this.form.querySelectorAll('.rb-error-message');
    const errorInputs = this.form.querySelectorAll('.rb-error');
    
    errorMessages.forEach(el => {
      el.textContent = '';
      el.style.display = 'none';
    });
    
    errorInputs.forEach(el => {
      el.classList.remove('rb-error');
    });
  }
  
  clearForm() {
    this.form.reset();
    this.clearAllErrors();
  }
  
  isValidEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }
  
  isValidPhone(phone) {
    const phoneRegex = /^[\+]?[\s\-\(\)]*([0-9][\s\-\(\)]*){10,}$/;
    return phoneRegex.test(phone);
  }
}
```

